<config>
    <modules>
        <Expercash_Expercash>
            <version>15.05.06</version>
        </Expercash_Expercash>
    </modules>
    <global>
        <blocks>
            <expercash>
                <class>Expercash_Expercash_Block</class>
            </expercash>
        </blocks>
        <helpers>
            <expercash>
                <class>Expercash_Expercash_Helper</class>
            </expercash>
        </helpers>
        <models>
            <expercash>
                <class>Expercash_Expercash_Model</class>
                <resourceModel>expercash_resource</resourceModel>
            </expercash>
            <expercash_resource>
                <class>Expercash_Expercash_Model_Resource</class>
            </expercash_resource>
        </models>
        <resources>
            <expercash_setup>
                <setup>
                    <module>Expercash_Expercash</module>
                    <class>Expercash_Expercash_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </expercash_setup>
            <expercash_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </expercash_write>
            <expercash_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </expercash_read>
        </resources>
        <payment>
            <groups>
                <expercash>ExperCash</expercash>
            </groups>
        </payment>
        <events>
            <controller_action_layout_render_before_checkout_onepage_index>
                <observers>
                    <masterpass_fullcheckout>
                        <class>expercash/observer</class>
                        <method>setStepData</method>
                    </masterpass_fullcheckout>
                </observers>
            </controller_action_layout_render_before_checkout_onepage_index>
            <sales_order_place_before>
                <observers>
                    <masterpass_fullcheckout>
                        <class>expercash/observer</class>
                        <method>validateMasterpassSession</method>
                    </masterpass_fullcheckout>
                </observers>
            </sales_order_place_before>
            <payment_method_is_active>
                <observers>
                    <masterpass_fullcheckout>
                        <class>expercash/observer</class>
                        <method>setPaymentAvailable</method>
                    </masterpass_fullcheckout>
                </observers>
            </payment_method_is_active>
            <checkout_cart_save_after>
                <observers>
                    <masterpass_fullcheckout>
                        <class>expercash/observer</class>
                        <method>invalidateMasterpassSession</method>
                    </masterpass_fullcheckout>
                </observers>
            </checkout_cart_save_after>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Expercash_Expercash>
                    <files>
                        <default>Expercash_Expercash.csv</default>
                    </files>
                </Expercash_Expercash>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <secure_url>
            <expercash_expercash>/expercash/expercash/</expercash_expercash>
        </secure_url>
        <translate>
            <modules>
                <Expercash_Expercash>
                    <files>
                        <default>Expercash_Expercash.csv</default>
                    </files>
                </Expercash_Expercash>
            </modules>
        </translate>
        <routers>
            <expercash>
                <use>standard</use>
                <args>
                    <module>Expercash_Expercash</module>
                    <frontName>expercash</frontName>
                </args>
            </expercash>
        </routers>
        <secure_url>
            <expercash>/expercash/</expercash>
        </secure_url>
        <layout>
            <updates>
                <expercash>
                    <file>expercash.xml</file>
                </expercash>
            </updates>
        </layout>
    </frontend>

